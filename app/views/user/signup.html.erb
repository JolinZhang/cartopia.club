
 <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  <% end %>

<%= form_for :user, url: user_signup_path do |f|%>
	<div>
	<%= f.text_field :username, placeholder:'Username' %>
	</div>

	<div>
	<%= f.text_field :email, placeholder:'Email' %>
	</div>

	<div>
	<%= f.text_field :password, placeholder:'Password' %>
	<div>

	<div>
	<%= f.text_field :password_confirmation, placeholder:'Password Confirmation' %><br>
	</div>

	<div>
	<%= f.submit %>
	</div>
<% end %>
