<%= form_for :user, url: user_signup_path do |f|%>
	<p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

	<p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
 
	<p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>
 
	<p>
    <%= f.label :password_confirmation %><br>
    <%= f.text_field :password_confirmation %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
