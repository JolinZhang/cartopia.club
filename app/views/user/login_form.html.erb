<% if @login_fail == 1 %> 
	Username Incorrect.
<% end %>
<% if @login_fail == 2 %> 
	Password Doesn't Match.
<% end %>

<%= form_for :user, url: user_login_path do |f|%>
	<div>
	<%= f.text_field :username, placeholder:'Username' %>
	</div>

	<div>
	<%= f.text_field :password, placeholder:'Password' %>
	<div>

	<%= f.submit %>
	</div>
<% end %>
