<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">SORT BY
  <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li><%= link_to 'Post Date: Newest', cars_path + "?" + {sort: 0}.to_param %></li>
    <li><%= link_to 'Price: Highest', cars_path + "?" + {sort: 1}.to_param %></li>
    <li><%= link_to 'Price: Lowest', cars_path + "?" + {sort: 2}.to_param %></li>
    <li><%= link_to 'Mileage: Highest', cars_path + "?" + {sort: 3}.to_param %></li>
    <li><%= link_to 'Mileage: Lowest', cars_path + "?" + {sort: 4}.to_param %></li>
    <li><%= link_to 'Year: Newest', cars_path + "?" + {sort: 5}.to_param %></li>
    <li><%= link_to 'Year: Oldest', cars_path + "?" + {sort: 6}.to_param %></li>
    <li><%= link_to 'Make/Model: A to Z', cars_path + "?" + {sort: 7}.to_param %></li>
  </ul>
</div>

<div class="container-fluid">
  <div class="row content">
  <% @cars.each do |car| %>
   <div class="carlist ">
    <div class="col-sm-3 ">
      <div class=""><%= image_tag("/assets/user_car/#{car.picture}", :alt => "rss feed") %></div>
    </div>
    <%= link_to car_path(car.id) do %>
    <div class="col-sm-9 ">
      <div class="cartitle"><%=car.year%><%=car.make%><%=car.model%></div>
      <div class="carprice">$<%=car.price%></div>
      <div class="carmileage"><%=car.mileage%>mi</div>
      <div class="carlocation"><%=car.state%><%=car.city%></div>
      <div class="carseller">post by:<%=car.user.username%></div>
      <div class="carcontact">contact:<%=car.contact%></div>
      <% if did_login?%>
      <div class=""><%= link_to"Favorite", user_favorites_path(current_user.id), data: {params: {car_id: car.id}.to_param, method: :post, remote: true} %></div>
      <% end %>
    </div>
    <%end %>
  </div>
  <% end %>
</div>
</div>
