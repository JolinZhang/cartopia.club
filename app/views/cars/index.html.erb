
<div layout="row" layout-xs="column">
	<div flex="10" hide-xs hide-sm></div>
  <div flex-gt-sm="20" flex-sm="30" class="side">
		<md-card layout-padding>

			<%= form_for :car, url: cars_search_path do |f| %>

				<%= f.text_field :year, :style => 'display: none' %>
				<%= f.text_field :make, :style => 'display: none' %>

			<div layout="column" layout-xs="row" layout-align-xs="space-around center">
			<md-input-container flex>
				<%= render 'cars/yearSelect'%>
			</md-input-container>

			<md-input-container flex>
				<%= render 'cars/makeSelect'%>
      </md-input-container>

			<md-input-container flex>
				<label>Mode</label>
				<%= f.text_field :model %><br>
			</md-input-container>

			<md-button class="md-raised" type="submit">SUBMIT</md-button>
			</div>
	<%end%>



		</md-card>

		<md-card layout-padding>
			<div layout="column" layout-xs="row" layout-wrap>
			<md-button class="md-raised" ng-href="<%= cars_path + "?" + {sort: 0}.to_param %>">
			Post Date
			<md-icon md-font-set="material-icons">trending_down</md-icon>
			</md-button>
			<md-button class="md-raised" ng-href="<%= cars_path + "?" + {sort: 7}.to_param %>">
			Make/Mode
			<md-icon md-font-set="material-icons">trending_up</md-icon>
			</md-button>
			<md-button class="md-raised" ng-href="<%= cars_path + "?" + {sort: 1}.to_param %>">
			Price
			<md-icon md-font-set="material-icons">trending_down</md-icon>
			</md-button>
			<md-button class="md-raised" ng-href="<%= cars_path + "?" + {sort: 2}.to_param %>">
			Price
			<md-icon md-font-set="material-icons">trending_up</md-icon>
			</md-button>
			<md-button class="md-raised" ng-href="<%= cars_path + "?" + {sort: 3}.to_param %>">
			Mileage
			<md-icon md-font-set="material-icons">trending_down</md-icon>
			</md-button>
			<md-button class="md-raised" ng-href="<%= cars_path + "?" + {sort: 4}.to_param %>">
			Mileage
			<md-icon md-font-set="material-icons">trending_up</md-icon>
			</md-button>
			<md-button class="md-raised" ng-href="<%= cars_path + "?" + {sort: 5}.to_param %>">
			Year
			<md-icon md-font-set="material-icons">trending_down</md-icon>
			</md-button>
			<md-button class="md-raised" ng-href="<%= cars_path + "?" + {sort: 6}.to_param %>">
			Year
			<md-icon md-font-set="material-icons">trending_up</md-icon>
			</md-button>
			</div>

		</md-card>

  </div>

  <div flex>

<%= render 'cars/item' %>
  </div>

  <div flex="10" hide-xs hide-sm></div>
</div>
