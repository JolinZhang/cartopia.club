<div layout="row">
<div flex></div>

<md-card>
<md-content class="login">

<%= form_for :session, url: login_path, remote: true do |f|%>
<md-input-container>
	<label>Username</label>
	<%= f.text_field :username %><br>
</md-input-container>

<br>

<md-input-container>
	<label>Password</label>
	<%= f.text_field :password, :type => 'password' %><br>
</md-input-container>

<br>

<md-checkbox class="md-warn" ng-click="toggleRemember()">
Remember Me
</md-checkbox>
	<%= f.check_box :remember_me, :style => 'display: none' %>

<br>

	<md-button class="md-raised" type="submit">LOGIN</md-button></br>

<% end %>

</md-content>
</md-card>
<div flex></div>
</div>
