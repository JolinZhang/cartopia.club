<% if @user.errors.any? %>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
<% end %>

<%= form_for :user, url: users_path do |f|%>
	<%= f.text_field :username, placeholder:'Username', class: 'underline_textfield' %><br>

	<%= f.text_field :email, placeholder:'Email', class: 'underline_textfield' %><br>

	<%= f.text_field :password, placeholder:'Password', class: 'underline_textfield' %><br>

	<%= f.text_field :password_confirmation, placeholder:'Password Confirmation', class: 'underline_textfield' %><br>

	<%= f.submit 'SIGNUP', class: 'btn btn-default' %>
<% end %>

